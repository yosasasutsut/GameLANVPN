<Window x:Class="GameLANVPN.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="GameLAN VPN" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontFamily="{materialDesign:MaterialDesignFont}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="GameLAN VPN - Virtual LAN Gaming"
                          VerticalAlignment="Center"
                          FontSize="20"
                          FontWeight="Medium"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <materialDesign:Chip Content="{Binding ConnectionStatus}"
                                        Margin="0,0,8,0"
                                        Icon="{Binding ConnectionIcon}"/>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding SettingsCommand}">
                        <materialDesign:PackIcon Kind="Settings" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Room List -->
            <Border Grid.Column="0" BorderThickness="0,0,1,0"
                    BorderBrush="{DynamicResource MaterialDesignDivider}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Room Controls -->
                    <StackPanel Grid.Row="0" Margin="16">
                        <TextBlock Text="ROOMS" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                    materialDesign:HintAssist.Hint="Room Code"
                                    Text="{Binding RoomCode}"
                                    Margin="0,0,8,0"/>
                            <Button Grid.Column="1"
                                   Command="{Binding JoinRoomCommand}"
                                   Content="JOIN"/>
                        </Grid>
                        <Button Command="{Binding CreateRoomCommand}"
                               Content="CREATE NEW ROOM"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               Margin="0,8,0,0"
                               HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Room List -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding Rooms}"
                            SelectedItem="{Binding SelectedRoom}"
                            Margin="8">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Padding="8" Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding GameName}"
                                                  FontWeight="Bold"/>
                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding RoomCode}"
                                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                        <TextBlock Grid.Row="1"
                                                  HorizontalAlignment="Right"
                                                  Text="{Binding PlayerCount}"/>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel - Room Details -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Room Info -->
                <materialDesign:Card Grid.Row="0" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentRoom.GameName}"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentRoom.RoomCode}"
                                  FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <materialDesign:PackIcon Kind="Account" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentRoom.PlayerCount}"
                                      Margin="4,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Players List -->
                <DataGrid Grid.Row="1"
                         ItemsSource="{Binding CurrentRoom.Players}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Player Name"
                                          Binding="{Binding PlayerName}"
                                          Width="*"/>
                        <DataGridTextColumn Header="Virtual IP"
                                          Binding="{Binding VirtualIP}"
                                          Width="120"/>
                        <DataGridTextColumn Header="Ping"
                                          Binding="{Binding Ping}"
                                          Width="60"/>
                        <DataGridTemplateColumn Header="Host" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon Kind="Crown"
                                                           Visibility="{Binding IsHost,
                                                           Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Margin="0,16,0,0">
                    <Button Command="{Binding StartGameCommand}"
                           Content="START GAME"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Margin="0,0,8,0"/>
                    <Button Command="{Binding LeaveRoomCommand}"
                           Content="LEAVE ROOM"
                           Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Latency: "/>
                    <TextBlock Text="{Binding Latency}"/>
                    <TextBlock Text=" ms" Margin="0,0,16,0"/>
                    <TextBlock Text="Upload: "/>
                    <TextBlock Text="{Binding UploadSpeed}"/>
                    <TextBlock Text=" KB/s" Margin="0,0,16,0"/>
                    <TextBlock Text="Download: "/>
                    <TextBlock Text="{Binding DownloadSpeed}"/>
                    <TextBlock Text=" KB/s"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>