<Window x:Class="GameLANVPN.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameLAN VPN - Sanctuary Gateway"
        Height="750" Width="1200" MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#0D0D0D">

    <Window.Resources>
        <!-- Diablo/MOBA Fantasy Theme -->
        <LinearGradientBrush x:Key="DiabloGoldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8C00" Offset="0"/>
            <GradientStop Color="#FFD700" Offset="0.5"/>
            <GradientStop Color="#B8860B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BloodRedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B0000" Offset="0"/>
            <GradientStop Color="#DC143C" Offset="0.5"/>
            <GradientStop Color="#B22222" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="DiabloButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BloodRedGradient}"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF4500" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#A0522D" Offset="0"/>
                                            <GradientStop Color="#FF4500" Offset="0.5"/>
                                            <GradientStop Color="#FF6347" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFF8DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <!-- Channel Selection Page (Initially Visible) -->
        <Grid x:Name="ChannelSelectionPage" Background="#FF1A1A2E" Visibility="Visible" Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🎯 เลือกช่องทาง - Choose Your Channel" FontSize="26" FontWeight="Bold"
                          Foreground="{StaticResource DiabloGoldGradient}" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <!-- Channel Table -->
                <Border Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="2" CornerRadius="8" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Table Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Icon" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Channel Name" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Players Online" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Action" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>

                        <!-- Separator -->
                        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Height="1" Fill="#4A4A5E" Margin="0,5"/>

                        <!-- DOTA All Pick -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="⚔️" FontSize="20" Foreground="#FF4500" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="DOTA All Pick (AP)" FontSize="14" Foreground="#C0C0C0" Margin="5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="127/500" FontSize="14" Foreground="#00FF00" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Row="2" Grid.Column="3" x:Name="SelectDotaAPBtn" Content="Join" Style="{StaticResource DiabloButton}"
                               FontSize="12" Padding="15,8" Margin="5" Click="JoinChannel_Click"/>

                        <!-- DOTA Easy Mode -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="⚡" FontSize="20" Foreground="#FFFF00" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="DOTA Easy Mode (EM)" FontSize="14" Foreground="#C0C0C0" Margin="5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="83/500" FontSize="14" Foreground="#00FF00" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Row="3" Grid.Column="3" x:Name="SelectDotaEMBtn" Content="Join" Style="{StaticResource DiabloButton}"
                               FontSize="12" Padding="15,8" Margin="5" Click="JoinChannel_Click"/>

                        <!-- DOTA LOD -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="🔮" FontSize="20" Foreground="#8A2BE2" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="DOTA Legends of DotA (LOD)" FontSize="14" Foreground="#C0C0C0" Margin="5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="45/500" FontSize="14" Foreground="#00FF00" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Row="4" Grid.Column="3" x:Name="SelectDotaLODBtn" Content="Join" Style="{StaticResource DiabloButton}"
                               FontSize="12" Padding="15,8" Margin="5" Click="JoinChannel_Click"/>

                        <!-- DOTA IMBA -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="💥" FontSize="20" Foreground="#FF0000" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="DOTA IMBA" FontSize="14" Foreground="#C0C0C0" Margin="5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="5" Grid.Column="2" Text="312/500" FontSize="14" Foreground="#00FF00" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Row="5" Grid.Column="3" x:Name="SelectDotaIMBABtn" Content="Join" Style="{StaticResource DiabloButton}"
                               FontSize="12" Padding="15,8" Margin="5" Click="JoinChannel_Click"/>
                    </Grid>
                </Border>

                <!-- Tower Defense Section -->
                <Border Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="2" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <!-- Table Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Icon" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Channel Name" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Players Online" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="Action" FontSize="14" FontWeight="Bold" Foreground="#FFD700" Margin="5" HorizontalAlignment="Center"/>

                        <!-- Separator -->
                        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Height="1" Fill="#4A4A5E" Margin="0,5"/>

                        <!-- Tower Defense -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="🏯" FontSize="20" Foreground="#8B4513" Margin="5" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Tower Defense" FontSize="14" Foreground="#C0C0C0" Margin="5" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="67/1000" FontSize="14" Foreground="#00FF00" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button Grid.Row="2" Grid.Column="3" x:Name="SelectTowerDefenseBtn" Content="Join" Style="{StaticResource DiabloButton}"
                               FontSize="12" Padding="15,8" Margin="5" Click="JoinChannel_Click"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main UI (Initially Hidden) -->
        <Grid x:Name="MainUIPanel" Visibility="Collapsed" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Channel Selector -->
            <Border Grid.Row="0" Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="0,0,0,1" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="CurrentChannelTitle" Text="🔥 BURNING HELLS CHAT" FontSize="26" FontWeight="Bold" Foreground="{StaticResource DiabloGoldGradient}"/>
                        <TextBlock x:Name="CurrentChannelDesc" Text="Where demons gather to plot their next conquest" FontSize="14" Foreground="#CD853F"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="ChannelSelectorBtn" Content="🎯 Select Channel" Style="{StaticResource DiabloButton}"
                                Margin="0,0,10,0" Click="ChannelSelector_Click"/>
                        <Button Content="⚙️ Settings" Style="{StaticResource DiabloButton}" Margin="0,0,10,0"/>
                        <Button Content="🚪 Logout" Style="{StaticResource DiabloButton}" Click="Logout_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1" Background="#FF1A1A2E">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Chat Area (Left) -->
                <Grid Grid.Column="0" Background="#FF1A1A2E">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Messages -->
                    <ScrollViewer Grid.Row="0" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1">
                        <StackPanel x:Name="ChatMessages" Margin="20">
                            <!-- Sample Chat Messages -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="[14:32]" FontSize="11" Foreground="#808080" Margin="0,0,8,0"/>
                                <TextBlock Text="GameMaster:" FontSize="12" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,5,0"/>
                                <TextBlock Text="Welcome to the channel!" FontSize="12" Foreground="#C0C0C0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Chat Input -->
                    <Border Grid.Row="1" Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="0,1,0,0" Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" x:Name="ChatInput" Background="#FF1A1A2E" Foreground="#C0C0C0"
                                    BorderBrush="#4A4A5E" Padding="15,10" FontSize="14"
                                    KeyDown="ChatInput_KeyDown" Margin="0,0,15,0"/>
                            <Button Grid.Column="1" Content="Send" Style="{StaticResource DiabloButton}"
                                   Click="SendMessage_Click"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Right Panel -->
                <Grid Grid.Column="1" Background="#FF2A2A3E" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Profile Section -->
                    <Border Grid.Row="0" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                           CornerRadius="5" Margin="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="👤 Profile" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DiabloGoldGradient}"
                                      HorizontalAlignment="Center" Margin="0,0,0,15"/>

                            <Ellipse Width="80" Height="80" Fill="#8B4513" Margin="0,0,0,10" HorizontalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FFD700" BlurRadius="10" ShadowDepth="0" Opacity="0.7"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <TextBlock Text="DemonSlayer666" FontSize="14" FontWeight="Bold" Foreground="#FFD700"
                                      HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Level 45 Barbarian" FontSize="12" Foreground="#CD853F"
                                      HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Status: " FontSize="11" Foreground="#C0C0C0"/>
                                <Ellipse Width="10" Height="10" Fill="#00FF00" Margin="5,0"/>
                                <TextBlock Text="Online" FontSize="11" Foreground="#00FF00"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Online/Friends Section -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Headers -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Button x:Name="OnlineTab" Content="👥 Online" Style="{StaticResource DiabloButton}"
                                   FontSize="12" Padding="10,5" Margin="0,0,5,0" Click="OnlineTab_Click"/>
                            <Button x:Name="FriendsTab" Content="💫 Friends" Style="{StaticResource DiabloButton}"
                                   FontSize="12" Padding="10,5" Click="FriendsTab_Click"/>
                        </StackPanel>

                        <!-- Online/Friends List -->
                        <Border Grid.Row="1" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                               CornerRadius="5" Padding="10">
                            <ScrollViewer>
                                <StackPanel x:Name="UserList">
                                    <!-- Sample Online Users -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#00FF00" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="WarriorKnight" FontSize="11" Foreground="#C0C0C0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#00FF00" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="MageSorcerer" FontSize="11" Foreground="#C0C0C0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#FFFF00" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="RogueAssassin" FontSize="11" Foreground="#C0C0C0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <Ellipse Width="8" Height="8" Fill="#FF0000" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="PaladinHoly" FontSize="11" Foreground="#808080" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>