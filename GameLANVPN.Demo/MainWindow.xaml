<Window x:Class="GameLANVPN.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameLAN VPN - Sanctuary Gateway"
        Height="950" Width="1500" MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="Transparent">

    <Window.Resources>
        <!-- Diablo/MOBA Fantasy Theme -->
        <LinearGradientBrush x:Key="DiabloGoldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF8C00" Offset="0"/>
            <GradientStop Color="#FFD700" Offset="0.5"/>
            <GradientStop Color="#B8860B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BloodRedGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B0000" Offset="0"/>
            <GradientStop Color="#DC143C" Offset="0.5"/>
            <GradientStop Color="#B22222" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SanctuaryBackground" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0D0D0D" Offset="0"/>
            <GradientStop Color="#1A1A1A" Offset="0.3"/>
            <GradientStop Color="#2D1B1B" Offset="0.6"/>
            <GradientStop Color="#0D0D0D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="PanelBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A0D0D" Offset="0"/>
            <GradientStop Color="#2D1B1B" Offset="0.5"/>
            <GradientStop Color="#3D2828" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="DiabloButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BloodRedGradient}"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF4500" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#A0522D" Offset="0"/>
                                            <GradientStop Color="#FF4500" Offset="0.5"/>
                                            <GradientStop Color="#FF6347" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFF8DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container with Diablo-style border -->
    <Border CornerRadius="15" BorderThickness="4" BorderBrush="{StaticResource DiabloGoldGradient}"
           Background="{StaticResource SanctuaryBackground}">
        <Border.Effect>
            <DropShadowEffect Color="#FF4500" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Warrior's Arsenal -->
            <Border Grid.Column="0" Background="{StaticResource PanelBackground}"
                   BorderBrush="#8B4513" BorderThickness="0,0,2,0" CornerRadius="8,0,0,8">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="5" Opacity="0.7"/>
                </Border.Effect>
            <StackPanel Margin="20">
                <!-- Sanctuary Emblem -->
                <Border Width="140" Height="140"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,20">
                    <Canvas Width="140" Height="140">
                        <!-- Outer Ring -->
                        <Ellipse Width="130" Height="130" Canvas.Left="5" Canvas.Top="5"
                                Fill="Transparent" Stroke="{StaticResource DiabloGoldGradient}" StrokeThickness="4"/>

                        <!-- Inner Demon Portal -->
                        <Ellipse Width="100" Height="100" Canvas.Left="20" Canvas.Top="20"
                                Fill="{StaticResource BloodRedGradient}" Opacity="0.8"/>

                        <!-- Pentagram -->
                        <Path Canvas.Left="35" Canvas.Top="35" Fill="{StaticResource DiabloGoldGradient}"
                              Data="M35,15 L45,35 L65,35 L50,50 L55,70 L35,55 L15,70 L20,50 L5,35 L25,35 Z"
                              Opacity="0.9"/>

                        <!-- Center Skull -->
                        <Ellipse Width="30" Height="30" Canvas.Left="55" Canvas.Top="55"
                                Fill="#8B0000"/>
                        <TextBlock Text="💀" FontSize="24" Canvas.Left="58" Canvas.Top="52"
                                  Foreground="#FFD700"/>
                    </Canvas>
                    <Border.Effect>
                        <DropShadowEffect Color="#FF4500" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                    </Border.Effect>
                </Border>

                <TextBlock Text="⚔️ SANCTUARY GATEWAY ⚔️"
                          FontSize="20" FontWeight="Bold"
                          Foreground="{StaticResource DiabloGoldGradient}"
                          HorizontalAlignment="Center" Margin="0,0,0,5"/>

                <TextBlock Text="Infernal Gaming Nexus"
                          FontSize="12" Foreground="#CD853F"
                          HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- Connection Status -->
                <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                       CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Connection Status" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="#FF4444" Margin="0,0,8,0"/>
                            <TextBlock Text="Disconnected" Foreground="#C0C0C0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Server Settings -->
                <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                       CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Server Settings" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,0,10"/>

                        <TextBlock Text="Server Address:" Foreground="#C0C0C0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox Text="gamelan.server.com" Background="#2A2A3E" Foreground="#C0C0C0"
                                BorderBrush="#4A4A5E" Padding="8" Margin="0,0,0,10"/>

                        <TextBlock Text="Port:" Foreground="#C0C0C0" FontSize="12" Margin="0,0,0,5"/>
                        <TextBox Text="7777" Background="#2A2A3E" Foreground="#C0C0C0"
                                BorderBrush="#4A4A5E" Padding="8" Margin="0,0,0,15"/>

                        <Button Content="🔥 Connect to Hell 🔥" Style="{StaticResource DiabloButton}" Margin="0,5"/>
                    </StackPanel>
                </Border>

                <!-- Quick Actions -->
                <StackPanel>
                    <Button Content="⚙️ Sanctuary Settings" Style="{StaticResource DiabloButton}" Margin="0,0,0,10"/>
                    <Button Content="📜 Legends" Style="{StaticResource DiabloButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Panel - Room List & Games -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="0,0,0,1" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="🔥 INFERNAL CHANNELS 🔥" FontSize="26" FontWeight="Bold" Foreground="{StaticResource DiabloGoldGradient}"/>
                        <TextBlock Text="Enter the burning realms to find fellow warriors" FontSize="14" Foreground="#CD853F"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="⚡ Forge Channel" Style="{StaticResource DiabloButton}" Margin="0,0,10,0"/>
                        <Button Content="🔄 Refresh Realms" Style="{StaticResource DiabloButton}" Margin="0,0,10,0"/>
                        <Button Content="🚪 Logout" Style="{StaticResource DiabloButton}" Click="Logout_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Channel List -->
            <Grid Grid.Row="1" Background="#FF1A1A2E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="300"/>
                </Grid.RowDefinitions>

                <!-- Channel List -->
                <ScrollViewer Grid.Row="0">
                    <StackPanel Margin="20">
                        <!-- Channel Cards -->
                        <Border Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="1"
                               CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="🔥" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Burning Hells" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DiabloGoldGradient}"/>
                                    </StackPanel>
                                    <TextBlock Text="Where demons gather to plot their next conquest • Souls: 487/500" FontSize="14" Foreground="#CD853F" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FF8B0000" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="INFERNAL" FontSize="10" Foreground="#FFD700"/>
                                        </Border>
                                        <Border Background="#FF4169E1" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="All Realms" FontSize="10" Foreground="White"/>
                                        </Border>
                                        <Border Background="#FFFF4500" CornerRadius="3" Padding="6,2">
                                            <TextBlock Text="97% Damned" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1" Content="🔥 Enter Hell" Style="{StaticResource DiabloButton}" x:Name="JoinGeneralBtn" Click="JoinChannel_Click"/>
                            </Grid>
                        </Border>

                        <Border Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="1"
                               CornerRadius="8" Padding="20" Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="⚔️" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Warriors' Sanctum" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DiabloGoldGradient}"/>
                                    </StackPanel>
                                    <TextBlock Text="Forge alliances and prepare for epic battles • Heroes: 312/500" FontSize="14" Foreground="#CD853F" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="#FF8B0000" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="LEGENDARY" FontSize="10" Foreground="#FFD700"/>
                                        </Border>
                                        <Border Background="#FF4169E1" CornerRadius="3" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock Text="All Realms" FontSize="10" Foreground="White"/>
                                        </Border>
                                        <Border Background="#FF228B22" CornerRadius="3" Padding="6,2">
                                            <TextBlock Text="62% Armed" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <Button Grid.Column="1" Content="⚔️ Join Battle" Style="{StaticResource DiabloButton}" x:Name="JoinGamingBtn" Click="JoinChannel_Click"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Chat Room (Initially Hidden) -->
                <Border Grid.Row="1" x:Name="ChatPanel" Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="0,1,0,0" Visibility="Collapsed">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Chat Header -->
                        <Border Grid.Row="0" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                               CornerRadius="5,5,0,0" Padding="15,10" Margin="0,0,0,0">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💬" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ChatChannelName" Text="General Chat" FontSize="16" FontWeight="Bold" Foreground="#FFD700"/>
                                    <TextBlock Text=" • " FontSize="16" Foreground="#C0C0C0"/>
                                    <TextBlock x:Name="ChatUserCount" Text="487 users online" FontSize="14" Foreground="#C0C0C0"/>
                                </StackPanel>
                                <Button Content="Leave Channel" HorizontalAlignment="Right"
                                       Style="{StaticResource DiabloButton}" FontSize="10" Padding="8,4"
                                       Click="LeaveChannel_Click"/>
                            </Grid>
                        </Border>

                        <!-- Chat Messages -->
                        <ScrollViewer Grid.Row="1" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1,0,1,0">
                            <StackPanel x:Name="ChatMessages" Margin="15">
                                <!-- Sample Chat Messages -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="[14:32]" FontSize="11" Foreground="#808080" Margin="0,0,8,0"/>
                                    <TextBlock Text="GameMaster:" FontSize="12" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,5,0"/>
                                    <TextBlock Text="Welcome to General Chat! Use /help for commands" FontSize="12" Foreground="#C0C0C0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="[14:35]" FontSize="11" Foreground="#808080" Margin="0,0,8,0"/>
                                    <TextBlock Text="ProGamer123:" FontSize="12" FontWeight="Bold" Foreground="#4169E1" Margin="0,0,5,0"/>
                                    <TextBlock Text="Anyone up for some Warcraft III?" FontSize="12" Foreground="#C0C0C0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="[14:36]" FontSize="11" Foreground="#808080" Margin="0,0,8,0"/>
                                    <TextBlock Text="DotaFan:" FontSize="12" FontWeight="Bold" Foreground="#228B22" Margin="0,0,5,0"/>
                                    <TextBlock Text="Count me in! Creating room in 5 mins" FontSize="12" Foreground="#C0C0C0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="[14:38]" FontSize="11" Foreground="#808080" Margin="0,0,8,0"/>
                                    <TextBlock Text="RetroGamer:" FontSize="12" FontWeight="Bold" Foreground="#FF6347" Margin="0,0,5,0"/>
                                    <TextBlock Text="Any CS 1.6 players here?" FontSize="12" Foreground="#C0C0C0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Chat Input -->
                        <Border Grid.Row="2" Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                               CornerRadius="0,0,5,5" Padding="15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" x:Name="ChatInput" Background="#2A2A3E" Foreground="#C0C0C0"
                                        BorderBrush="#4A4A5E" Padding="8"
                                        KeyDown="ChatInput_KeyDown"/>
                                <Button Grid.Column="1" Content="Send" Style="{StaticResource DiabloButton}"
                                       Margin="10,0,0,0" Click="SendMessage_Click"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer Status -->
            <Border Grid.Row="2" Background="#FF2A2A3E" BorderBrush="#4A4A5E" BorderThickness="0,1,0,0" Padding="20,10">
                <Grid>
                    <TextBlock Text="🔥 The eternal war rages on • Choose your realm and join the infernal battle 🔥"
                              FontSize="12" Foreground="#CD853F" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Sanctuary v0.2.0" FontSize="11" Foreground="#8B4513" Margin="0,0,15,0"/>
                        <TextBlock Text="Damned Souls: 799" FontSize="11" Foreground="#FF4500"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Panel - User Info Tabs -->
        <Border Grid.Column="2" Background="{StaticResource PanelBackground}"
               BorderBrush="#8B4513" BorderThickness="2,0,0,0" CornerRadius="0,8,8,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="5" Opacity="0.7"/>
            </Border.Effect>

            <TabControl Background="Transparent" BorderThickness="0" Margin="10">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="{StaticResource BloodRedGradient}"/>
                        <Setter Property="Foreground" Value="#FFD700"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="15,8"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="BorderBrush" Value="#8B4513"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="{TemplateBinding BorderThickness}"
                                           CornerRadius="3,3,0,0" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite"
                                                         ContentSource="Header"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource DiabloGoldGradient}"/>
                                            <Setter Property="Foreground" Value="#1A0D0D"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6347"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Profile Tab -->
                <TabItem Header="💀 โปรไฟล์">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- Player Profile -->
                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="5" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <Border Width="90" Height="90"
                                           HorizontalAlignment="Center"
                                           CornerRadius="45"
                                           BorderThickness="3"
                                           BorderBrush="{StaticResource DiabloGoldGradient}"
                                           Background="{StaticResource BloodRedGradient}"
                                           Margin="0,0,0,15">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#FF4500" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                        </Border.Effect>
                                        <TextBlock Text="💀" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD700"/>
                                    </Border>

                                    <TextBlock Text="DemonSlayer666" FontSize="16" FontWeight="Bold"
                                              Foreground="{StaticResource DiabloGoldGradient}" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="🔥 Level 47 • 1,337 วิญญาณ 🔥" FontSize="12"
                                              Foreground="#CD853F" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                    <Button Content="⚔️ เพิ่มพลัง" Style="{StaticResource DiabloButton}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Online Users Tab -->
                <TabItem Header="👥 ออนไลน์">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="🔥 ผู้เล่นออนไลน์ในช่องทาง" FontWeight="Bold"
                                      Foreground="{StaticResource DiabloGoldGradient}" Margin="0,0,0,15"/>

                            <!-- Sample Online Users -->
                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FF00FF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="🔥 DragonMaster" Foreground="#FFD700" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FF00FF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="⚔️ SwordSlayer" Foreground="#FFD700" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FF00FF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="🏰 CastleGuard" Foreground="#FFD700" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FFFFFF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="🔮 MageWizard" Foreground="#CD853F"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FF00FF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="🗡️ BladeRunner" Foreground="#FFD700" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Friends Tab -->
                <TabItem Header="👫 เพื่อน">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="💫 รายชื่อเพื่อน" FontWeight="Bold"
                                      Foreground="{StaticResource DiabloGoldGradient}" Margin="0,0,0,15"/>

                            <!-- Sample Friends -->
                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FF00FF00" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="🐉 RedDragon99" Foreground="#FFD700" FontWeight="Bold"/>
                                        <TextBlock Text="ใน: นรกเผาไหม้" Foreground="#CD853F" FontSize="10"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF1A1A2E" BorderBrush="#4A4A5E" BorderThickness="1"
                                   CornerRadius="3" Padding="10" Margin="0,0,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#FFFF0000" Width="8" Height="8" CornerRadius="4" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="🛡️ IronShield" Foreground="#CD853F"/>
