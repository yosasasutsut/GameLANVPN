<Window x:Class="GameLANVPN.Demo.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameLAN VPN - Dragon's Gate"
        Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Fantasy Dragon Theme -->
        <LinearGradientBrush x:Key="DragonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#8B0000" Offset="0"/>
            <GradientStop Color="#DC143C" Offset="0.5"/>
            <GradientStop Color="#FF4500" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFD700" Offset="0"/>
            <GradientStop Color="#B8860B" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1A0D0D" Offset="0"/>
            <GradientStop Color="#2D1B1B" Offset="0.3"/>
            <GradientStop Color="#3D2828" Offset="0.7"/>
            <GradientStop Color="#1A0D0D" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="DragonButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DragonGradient}"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#A0522D" Offset="0"/>
                                            <GradientStop Color="#CD853F" Offset="0.5"/>
                                            <GradientStop Color="#FF6347" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFF8DC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DragonTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D1B1B"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FFD700"/>
                                <Setter Property="Background" Value="#3D2828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DragonPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2D1B1B"/>
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FFD700"/>
                                <Setter Property="Background" Value="#3D2828"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" BorderThickness="3" BorderBrush="{StaticResource GoldGradient}">
        <Grid Background="{StaticResource BackgroundGradient}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Language Selector and Close Button -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top"
                       Orientation="Horizontal" Margin="15,15,15,0">

                <!-- Language Selector -->
                <ComboBox x:Name="LanguageSelector" Width="120" Height="30" Margin="0,0,10,0"
                         Background="#2D1B1B" Foreground="#FFD700" BorderBrush="#8B4513" BorderThickness="2"
                         SelectionChanged="LanguageSelector_SelectionChanged">
                    <ComboBoxItem Content="ðŸ‡¹ðŸ‡­ à¹„à¸—à¸¢" Tag="th-TH" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸ‡ºðŸ‡¸ English" Tag="en-US"/>
                </ComboBox>

                <!-- Close Button -->
                <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                       Width="30" Height="30"
                       Background="Transparent" BorderThickness="0"
                       Foreground="#FFD700" FontSize="18" FontWeight="Bold"
                       Content="âœ•" Cursor="Hand" Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#33FFD700"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            </StackPanel>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Margin="50,20,50,20" HorizontalAlignment="Center">

                <!-- Dragon Logo -->
                <Border Width="150" Height="150"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,30">
                    <Canvas Width="150" Height="150">
                        <!-- Dragon Silhouette -->
                        <Ellipse Width="120" Height="120" Canvas.Left="15" Canvas.Top="15"
                                Fill="{StaticResource DragonGradient}" Opacity="0.8"/>

                        <!-- Dragon Head -->
                        <Path Canvas.Left="40" Canvas.Top="30" Fill="{StaticResource GoldGradient}"
                              Data="M30,40 Q45,25 60,40 Q75,30 80,45 Q75,60 60,50 Q45,65 30,50 Q25,45 30,40 Z"/>

                        <!-- Dragon Eyes -->
                        <Ellipse Width="8" Height="8" Canvas.Left="45" Canvas.Top="42" Fill="#FF0000"/>
                        <Ellipse Width="8" Height="8" Canvas.Left="65" Canvas.Top="42" Fill="#FF0000"/>

                        <!-- Dragon Wings -->
                        <Path Canvas.Left="20" Canvas.Top="50" Fill="{StaticResource DragonGradient}" Opacity="0.7"
                              Data="M0,20 Q20,0 40,20 Q30,40 20,35 Q10,30 0,20 Z"/>
                        <Path Canvas.Left="90" Canvas.Top="50" Fill="{StaticResource DragonGradient}" Opacity="0.7"
                              Data="M40,20 Q20,0 0,20 Q10,30 20,35 Q30,40 40,20 Z"/>

                        <!-- Glow Effect -->
                        <Ellipse Width="140" Height="140" Canvas.Left="5" Canvas.Top="5"
                                Fill="Transparent" Stroke="#FFD700" StrokeThickness="2" Opacity="0.5"/>
                    </Canvas>
                    <Border.Effect>
                        <DropShadowEffect Color="#FFD700" BlurRadius="25" ShadowDepth="0" Opacity="0.7"/>
                    </Border.Effect>
                </Border>

                <!-- Title -->
                <TextBlock Text="{Binding LoginTitle}"
                          FontSize="28" FontWeight="Bold"
                          Foreground="{StaticResource GoldGradient}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="{Binding LoginSubtitle}"
                          FontSize="16" FontStyle="Italic"
                          Foreground="#CD853F"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"/>

                <!-- Login Form -->
                <StackPanel Width="300">
                    <!-- Username -->
                    <TextBlock Text="{Binding UsernameLabel}" FontSize="14" FontWeight="Bold"
                              Foreground="#FFD700" Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameTextBox" Style="{StaticResource DragonTextBox}"
                            Text="test" Margin="0,0,0,20"/>

                    <!-- Password -->
                    <TextBlock Text="{Binding PasswordLabel}" FontSize="14" FontWeight="Bold"
                              Foreground="#FFD700" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource DragonPasswordBox}"
                                Password="test" Margin="0,0,0,30"/>

                    <!-- Login Button -->
                    <Button Content="{Binding LoginButton}"
                           Style="{StaticResource DragonButton}"
                           Click="LoginButton_Click"
                           Margin="0,0,0,20"/>

                    <!-- Status Message -->
                    <TextBlock x:Name="StatusMessage" Text=""
                              FontSize="12"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>

            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#1A0D0D" Opacity="0.8"
                   CornerRadius="0,0,17,17" Padding="20,15">
                <Grid>
                    <TextBlock Text="{Binding FooterText}"
                              FontSize="12" FontStyle="Italic"
                              Foreground="#CD853F"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="v0.2.0" FontSize="10"
                              Foreground="#8B4513"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>